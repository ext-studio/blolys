{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"project": {
		"name": "blolys"
	},
	"apps": [
		{
			"root": "client",
			"outDir": "dist",
			"assets": [
				"assets"
			],
			"index": "index.html",
			"main": "main.ts",
			"polyfills": "polyfills.ts",
			"test": "test.ts",
			"tsconfig": "tsconfig.app.json",
			"prefix": "app",
			"styles": [
				"styles/var.scss",
				"styles/global.scss"
			],
			"scripts": [],
			"environmentSource": "environments/environment.ts",
			"environments": {
				"dev": "environments/environment.ts",
				"prod": "environments/environment.prod.ts"
			}
		}
	],
	"lint": [
		{
			"project": "client/tsconfig.app.json",
			"exclude": "**/node_modules/**"
		}
	],
	"defaults": { 
		"styleExt": "scss",
		"class": {
			"spec": false
		},
		"component": {
			"spec": false
		},
		"directive": {
			"spec": false
		},
		"guard": {
			"spec": false
		},
		"module": {
			"spec": false
		},
		"pipe": {
			"spec": false
		},
		"service": {
			"spec": false
		}
	}
}
